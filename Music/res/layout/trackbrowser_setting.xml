<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/play_all_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingTop="4dip"
        android:orientation="horizontal"
       >
      <ImageView android:id="@+id/play_all_image"            
                 android:layout_width="52dip"
                 android:layout_height="match_parent"
                 android:paddingLeft="8dip"
                 android:src="@drawable/ic_menu_play_clip"
                 android:scaleType="fitXY"/>
      
      <Button 
         android:id="@+id/play_all_button"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
	 android:text="@string/play_all"
         android:paddingLeft="8dip"
         android:layout_gravity="center"
         />
      
      
    </LinearLayout>
    

    <LinearLayout 
       android:id="@+id/party_shuffle_linearLayout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingTop="6dip"
       android:orientation="horizontal"
       >
      <ImageView android:id="@+id/party_shuffle_image"            
                 android:layout_width="52dip"
                 android:layout_height="match_parent"
                 android:paddingLeft="8dip"
                 android:src="@drawable/ic_menu_party_shuffle"
                 android:scaleType="fitXY"/>
      
      <Button 
         android:id="@+id/party_shuffle_switch_button"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:paddingLeft="8dip"
         android:layout_gravity="center"
         />
    </LinearLayout>
    

    <LinearLayout 
       android:id="@+id/shuffle_all_linearLayout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingTop="6dip"
       android:orientation="horizontal"
       >
      <ImageView android:id="@+id/shuffle_all_image"
                 android:layout_width="52dip"
                 android:layout_height="match_parent"
                 android:paddingLeft="8dip"
                 android:src="@drawable/ic_menu_shuffle"
                 android:scaleType="fitXY"/>
      
      <Button 
         android:id="@+id/shuffle_all_button"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:paddingLeft="8dip"
         android:layout_gravity="center"
	 android:text="@string/shuffle_all"
         />            
    </LinearLayout>        



    
    <LinearLayout 
       android:id="@+id/save_as_content"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingTop="6dip"
       android:orientation="horizontal"
       android:visibility="gone"
       >
      <ImageView android:id="@+id/save_as_image"
                 android:layout_width="52dip"
                 android:layout_height="match_parent"
                 android:paddingLeft="8dip"
                 android:src="@android:drawable/ic_menu_save"
                 android:scaleType="fitXY"/>
      
      <Button 
         android:id="@+id/save_as_button"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:paddingLeft="8dip"
         android:layout_gravity="center"
	 android:text="@string/save_as_playlist"
         />            
    </LinearLayout>        

    <LinearLayout 
       android:id="@+id/clear_playlist_content"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingTop="6dip"
       android:orientation="horizontal"
       android:visibility="gone"
       >
      <ImageView android:id="@+id/clear_playlist"
                 android:layout_width="52dip"
                 android:layout_height="match_parent"
                 android:paddingLeft="8dip"
                 android:src="@drawable/ic_menu_clear_playlist"
                 android:scaleType="fitXY"/>
      
      <Button 
         android:id="@+id/clear_playlist_button"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:paddingLeft="8dip"
         android:layout_gravity="center"
	 android:text="@string/clear_playlist"
         />            
    </LinearLayout>        


</LinearLayout>
