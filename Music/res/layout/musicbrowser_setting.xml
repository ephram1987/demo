<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  
  <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:paddingTop="2dip"
     android:orientation="horizontal">
    
    <ImageView android:id="@+id/curplaylistImage"            
               android:layout_width="52dip"
               android:layout_height="match_parent"
               android:paddingLeft="8dip"
               android:src="@drawable/ic_mp_current_playlist_btn"
               android:scaleType="fitXY"/>
    
    <Button 
       android:id="@+id/curplaylist"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:text="@string/view_current_playlist"
       android:paddingLeft="8dip"
       android:layout_gravity="center"/>           
  </LinearLayout>      
  
  <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:paddingTop="4dip"
     android:orientation="horizontal">
    
    <ImageView android:id="@+id/shuffleImage"            
               android:layout_width="52dip"
               android:layout_height="match_parent"
               android:paddingLeft="8dip"
               android:src="@drawable/ic_menu_party_shuffle"
               android:scaleType="fitXY"/>
    
    <Button 
       android:id="@+id/shuffle"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:paddingLeft="8dip"
       android:layout_gravity="center"/>
  </LinearLayout>             
  
  
  <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:paddingTop="4dip"
     android:orientation="horizontal">    
    <ImageView android:id="@+id/repeatImage"            
               android:layout_width="52dip"
               android:layout_height="match_parent"
               android:paddingLeft="8dip"
               android:src="@drawable/ic_menu_party_shuffle"
               android:scaleType="fitXY"/>
    
    <Button 
       android:id="@+id/repeat"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:paddingLeft="8dip"
       android:layout_gravity="center"/>
  </LinearLayout>
  
  <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="48dip"
     android:paddingTop="4dip"
     android:orientation="horizontal">
    <ImageView 
       android:layout_width="52dip"
       android:layout_height="match_parent"
       android:paddingLeft="8dip"
       android:src="@drawable/ic_settings_sound"
       android:scaleType="fitXY"/>


    <ImageButton
       android:id="@+id/volume_plus"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:paddingLeft="8dip"
       android:src="@drawable/whitevol_plus"/>

    <ImageButton 
       android:id="@+id/volume_sub"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:paddingLeft="8dip"
       android:src="@drawable/whitevol_sub"/>

    <TextView 
       android:id="@+id/currentVolume"
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:paddingLeft="8dip"
       android:layout_gravity="bottom"
       />


  </LinearLayout>

</LinearLayout>
